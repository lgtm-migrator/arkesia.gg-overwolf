{
  "manifest_version": 1,
  "type": "WebApp",
  "meta": {
    "name": "Arkesia.gg-dev",
    "author": "Leon Machens",
    "version": "0.2.0",
    "minimum-overwolf-version": "0.190.0",
    "description": "Lost Ark Interactive Map",
    "dock_button_title": "Arkesia.gg",
    "icon": "icons/iconMouseOver.png",
    "icon_gray": "icons/iconMouseNormal.png",
    "launcher_icon": "icons/launcherIcon.ico",
    "window_icon": "icons/taskbarIcon.png"
  },
  "permissions": ["Hotkeys", "GameInfo"],
  "data": {
    "start_window": "controller",
    "windows": {
      "controller": {
        "file": "dist/controller.html",
        "debug_url": "http://localhost:3030/controller.html",
        "is_background_page": true
      },
      "desktop": {
        "file": "dist/index.html",
        "debug_url": "http://localhost:3030/index.html",
        "desktop_only": true,
        "native_window": true,
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 800,
          "height": 600
        },
        "min_size": {
          "width": 600,
          "height": 500
        },
        "allow_local_file_access": true,
        "popup_blocker": true,
        "mute": true,
        "keep_window_location": true,
        "disable_hardware_acceleration": true
      },
      "overlay": {
        "file": "dist/index.html",
        "debug_url": "http://localhost:3030/index.html",
        "desktop_only": false,
        "in_game_only": true,
        "focus_game_takeover": "ReleaseOnLostFocus",
        "focus_game_takeover_release_hotkey": "show_hide_app",
        "resizable": true,
        "transparent": true,
        "override_on_update": true,
        "size": {
          "width": 800,
          "height": 600
        },
        "min_size": {
          "width": 600,
          "height": 500
        },
        "allow_local_file_access": true,
        "popup_blocker": true,
        "mute": true,
        "keep_window_location": true,
        "restrict_to_game_bounds": true
      }
    },
    "game_targeting": {
      "type": "dedicated",
      "game_ids": [21864]
    },
    "game_events": [21864],
    "launch_events": [
      {
        "event": "GameLaunch",
        "event_data": {
          "game_ids": [21864]
        },
        "start_minimized": false
      }
    ],
    "hotkeys": {
      "show_hide_app": {
        "title": "Show/Hide App",
        "action-type": "custom",
        "default": "Ctrl+x"
      }
    },
    "protocol_override_domains": {
      "googlesyndication": "http"
    },
    "externally_connectable": {
      "matches": ["http://localhost:3030", "https://arkesia.gg"]
    },
    "force_browser": "user",
    "developer": {
      "enable_auto_refresh": true,
      "reload_delay": 1000,
      "filter": "*.*"
    }
  }
}
